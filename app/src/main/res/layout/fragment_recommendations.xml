<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendationsFragment">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#f2f2f2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/reco00"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/reco00"
            android:background="#00000000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/reco01"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/reco01"
            android:background="#00000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/reco02"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/reco02"
            android:background="#00000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/reco03"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/reco03"
            android:background="#00000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </HorizontalScrollView>


</FrameLayout>